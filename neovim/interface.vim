" Line numbers
set number
" relative to the current line
set relativenumber
 
" Theme...
colorscheme gruvbox
let g:gruvbox_contrast_light='hard'
let g:gruvbox_contrast_dark='light'
" ...And font
set guifont=Fira\ Mono\ Medium\ 15

" 92 character column
set colorcolumn=110

" Saner splits
set splitright
set splitbelow

" highligh cursor line & column
set cursorline
set cursorcolumn

