#!/bin/sh

case \
    $(echo "Hibernate|Lock|Log out|Reboot|Shutdown|Sleep" \
    | rofi -sep '|' -dmenu -i) in
    "Hibernate") lock && systemctl hybrid-sleep ;;
    "Lock")      lock                           ;;
    "Log out")   bspc quit                      ;;
    "Reboot")    systemctl reboot               ;;
    "Shutdown")  systemctl poweroff             ;;
    "Sleep")     lock && systemctl suspend      ;;
esac
