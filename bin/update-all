#!/bin/sh

echo "─────────────────── DNF ─────────────────────────────────────────────────────"
sudo dnf5 update --assumeyes
echo "─────────────────── Home Manager ────────────────────────────────────────────"
nix flake update --flake ~/.config/dotfiles
home-manager switch --flake ~/.config/dotfiles/
echo "─────────────────── flatpak ─────────────────────────────────────────────────"
flatpak update --assumeyes
echo "─────────────────── emacs ───────────────────────────────────────────────────"
emacs --batch -l ~/.config/emacs/init.el --eval "(straight-pull-all)"
echo "─────────────────── nvim ────────────────────────────────────────────────────"
nvim +PlugUpgrade +PlugUpdate +qa
echo "─────────────────── tldr ────────────────────────────────────────────────────"
tldr --update
echo "─────────────────── cabal ────────────────────────────────────────────────────"
cabal update
