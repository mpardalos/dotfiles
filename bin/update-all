#!/bin/sh

echo "─────────────────── DNF ─────────────────────────────────────────────────────"
sudo dnf update
echo "─────────────────── flatpak ─────────────────────────────────────────────────"
flatpak update
echo "─────────────────── doom ────────────────────────────────────────────────────"
doom upgrade
echo "─────────────────── nvim ────────────────────────────────────────────────────"
nvim +PlugUpgrade +PlugUpdate +qa
echo "─────────────────── fish (omf) ──────────────────────────────────────────────"
fish -c 'omf update'
