#!/bin/sh

echo "─────────────────── DNF ─────────────────────────────────────────────────────"
sudo dnf5 update --assumeyes
echo "─────────────────── flatpak ─────────────────────────────────────────────────"
flatpak update --assumeyes
echo "─────────────────── doom ────────────────────────────────────────────────────"
doom upgrade
echo "─────────────────── nvim ────────────────────────────────────────────────────"
nvim +PlugUpgrade +PlugUpdate +qa
echo "─────────────────── tldr ────────────────────────────────────────────────────"
tldr --update
echo "─────────────────── cabal ────────────────────────────────────────────────────"
cabal update
