#!/bin/sh

toggle_compton() {
    pgrep compton >/dev/null \
        && pkill compton \
        || compton -b
}

toggle_polybar() {
    if pgrep polybar >/dev/null; then
        pkill polybar
        bspc config bottom_padding 0
    else
        ~/.bin/start_polybar
    fi
}

case $1 in
    compton) toggle_compton;;
    polybar) toggle_polybar;;
    bar) toggle_polybar;;
    *)
        printf "Usage: %s (compton|polybar|bar)\n" $(basename "$0")
        printf "\n"
        printf "Toggle some aspect of the desktop\n"
        exit 1
        ;;
esac
