# hl for next/previous to match jk for up/down
map h navigate previous
map l navigate next

# Or arrow keys
map Left navigate previous
map Right navigate next

# (Shift+)space scrolls by half-page
map <S-Space> scroll half-up
map <Space>   scroll half-down

map r reload
map R rotate
map = zoom in
map - zoom out

# Recolor
map c recolor

# Page fit
map D toggle_page_mode
map f adjust_window best-fit
map F adjust_window width

# Padding
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

# Options
set smooth-scroll true
set statusbar-basename true
set selection-clipboard clipboard

# Colors
include zathuracolors
