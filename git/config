[core]
	autocrlf = input
[push]
	default = simple
[alias]
	c = commit
	ca = commit --amend
	a = add
	co = checkout
	re = reset
	s = status --short
	ss = status --long
	unstage = restore --staged
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	get-ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"
[pull]
	rebase = true
[credential]
	helper = store
