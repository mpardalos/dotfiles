# Should you change your keyboard layout some time, delete
# this file and re-run i3-config-wizard(1).

# Modkey
set $mod Mod4

# Main Font
font pango:Roboto-Regular 9

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod


#---------------Monitors---------------
set $monitor1 DisplayPort-0
set $monitor2 HDMI-0
#---------------/Monitors---------------


#---------------Moving around---------------
# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

#---------------Moving around---------------


#--------------------Colorscheme--------------------
set $bg-color 	         #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #6c90cc
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #6c90cc
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #6c90cc
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #6c90cc
#--------------------/Colorscheme--------------------


#---------------Status bar---------------
bar {
    i3bar_command i3bar -t
  	status_command i3blocks -c $HOME/.config/i3/i3blocks.conf
    output $monitor1
    tray_output $monitor1
    position top

	colors {
		background $bg-color
	   	separator #757575
		#value             border             background         text
		focused_workspace  $bg-color          $bg-color          $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}

bar {
    output $monitor2
    position top
	colors {
		background $bg-color
	   	separator #757575
		#value             border             background         text
		focused_workspace  $bg-color          $bg-color          $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}
#---------------Status bar---------------


#---------------Workspaces---------------
set $general_workspace "1. "
set $terminal_workspace "2. "
set $chrome_workspace "3. "
set $music_workspace  "4. "
set $communication_workspace "5. "

# switch to workspace
bindsym $mod+1 workspace $general_workspace
bindsym $mod+2 workspace $terminal_workspace
bindsym $mod+3 workspace $chrome_workspace
bindsym $mod+4 workspace $music_workspace
bindsym $mod+5 workspace $communication_workspace
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 0

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $general_workspace
bindsym $mod+Shift+2 move container to workspace $terminal_workspace
bindsym $mod+Shift+3 move container to workspace $chrome_workspace
bindsym $mod+Shift+4 move container to workspace $music_workspace
bindsym $mod+Shift+5 move container to workspace $communication_workspace
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 0

workspace $general_workspace output $monitor1
workspace $terminal_workspace output $monitor1

workspace $chrome_workspace output $monitor2
workspace $music_workspace output $monitor2
workspace $communication_workspace output $monitor2
#---------------Workspaces---------------


#--------------------Keybindings--------------------
# Move current workspace to the other screen
bindsym $mod+m move workspace to output right
# Lock the screen
bindsym $mod+shift+x exec i3lock --tiling --image $HOME/Pictures/wallpapers/arc_dark_default_blurred.png
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
#bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Application shortcuts
bindsym $mod+Return exec "konsole"
bindsym $mod+Shift+Return exec "dolphin"

#---Default Keybindings---
# kill focused window
bindsym $mod+Shift+q kill

# split in horizontal orientation
bindsym $mod+o split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)

# toggle tiling / floating
bindsym $mod+shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
#bindsym $mod+a focus parent
#---Default Keybindings--- 

#--------------------/Keybindings--------------------

#--------------------Modes---------------------------
#exit mode
set $exit_mode "[s]hutdown | [r]eboot | [e]xit i3"
mode $exit_mode {
    bindsym s exec "systemctl shutdown"
    bindsym r exec "systemctl reboot"
    bindsym e exec "i3-msg exit"

    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode $exit_mode

#resize mode
set $resize_mode "resize
mode $resize {
    bindsym h resize shrink width 5 px or 5 ppt
    bindsym j resize grow height 5 px or 5 ppt
    bindsym k resize shrink height 5 px or 5 ppt
    bindsym l resize grow width 5 px or 5 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode $resize

set $layout_mode "vertical split [j] | horizontal split [l] | [t]abs | [s]tacking"
mode $layout_mode {
    # j/k to split vertically and h/l to split horizontaly
    bindsym j layout splitv; mode "default"
    bindsym k layout splitv; mode "default"
    bindsym h layout splith; mode "default"
    bindsym l layout splith; mode "default"

    bindsym t layout tabbed; mode "default"
    bindsym s layout stacking; mode "default"
    
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+a mode $layout_mode
#--------------------Modes---------------------------



#--------------------Default Windows--------------------
assign [class="konsole"] $terminal_workspace
assign [class="(?i)google play music desktop player"] $music_workspace 
assign [class="google"] $chrome_workspace
assign [class="Skype"] $communication_workspace
assign [instance="(?i)messengerfordesktop"] $communication_workspace
#--------------------/Default Windows-------------------


#--------------------Window rules-------------------
for_window [class="(?i)yad"] floating enable
#--------------------/Window rules-------------------


#--------------------Wallpaper--------------------
exec_always --no-startup-id feh --bg-scale $HOME/Pictures/wallpapers/arc_dark_default.png
#--------------------/Wallpaper--------------------


#-------------------Rofi--------------------
bindsym $mod+d exec "rofi -combi-modi window,drun -show combi"
#-------------------/Rofi--------------------


#-------------------Dat gap--------------------
gaps inner 30
gaps outer -20
#-------------------/Dat gap--------------------


#---------------Compton---------------
exec --no-startup-id compton -f 
#---------------Compton---------------

#
#---------------Keyboard layout switching---------------
exec --no-startup-id "setxkbmap -model pc105 -layout gb,gr"
#---------------Keyboard layout switching---------------

#---------------Startup Programs---------------
exec konsole
exec google-chrome-stable
exec gpmdp
#exec messengerfordesktop
#exec skype
#---------------Startup Programs---------------
