#
# wm independent hotkeys
#

super + Return
	alacritty

super + d
    ~/.bin/launcher

super + a
    ~/.bin/rofi_menu_search

super + shift + t 
    ~/.bin/change_wallpaper

super + shift + q
    ~/.bin/exit_dialog

Print
    ~/.bin/screenshot_menu

super + Escape
	pkill -USR1 -x sxhkd

# Launcher

super + w ; b
    firefox
super + w ; f
   thunar
super + w ; r 
    rofi-sensible-terminal -e rtv
super + w ; e 
    code
super + w ; m 
    spotify


# Media keys {{{
XF86AudioMute
    ~/.bin/volume_control mute
XF86AudioRaiseVolume
    ~/.bin/volume_control up
XF86AudioLowerVolume
    ~/.bin/volume_control down

XF86AudioPrev
    playerctl previous
XF86AudioNext
    playerctl next
XF86AudioPlay
    playerctl play-pause

XF86MonBrightnessUp
    ~/.bin/brightness_control up
XF86MonBrightnessDown
    ~/.bin/brightness_control down
# }}}

super + shift + f
    bspc desktop -f -l next

# Windows {{{

super + {h,j,k,l}
    bspc node --focus {west,south,north,east}

super + shift + {h,j,k,l}
    bspc node --swap {west,south,north,east}

# Rotate desktop
super + {_,shift + }r
    bspc node @/ --rotate {90,-90}

# Moving/Resizing {{{
super + {Up, Right, Down, Left}
    bspc node --move {0 -50,50 0,0 50,-50 0}

super + ctrl + {Up, Right, Down, Left}
    bspc node --move {0 -10,10 0,0 10,-10 0}
    
super + shift + {Up, Right, Down, Left}
    bspc node --resize bottom_right {0 -50,50 0,0 50,-50 0}

super + ctrl + shift + {Up, Right, Down, Left}
    bspc node --resize bottom_right {0 -10,10 0,0 10,-10 0}
# }}}

super + q
    bspc node -f --close

super + f 
    bspc node --state ~floating

super + {u,i}
    bspc desktop -f {prev, next}

super + shift + {u,i}
    bspc node -d {prev, next} --follow

super + {parenleft,0,parenright}
    bspc node -l {below,normal,above}

# }}}

# Gaps {{{
super + bracketleft
    bspc config window_gap $(~/.bin/max $(echo "$(bspc config window_gap) - 10" | bc) 0)

super + bracketright
    bspc config window_gap $(echo "$(bspc config window_gap) + 10" | bc)
# }}}

# vim: fdm=marker
#
